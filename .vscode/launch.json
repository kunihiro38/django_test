    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: myapp", // debug実行の名前
            "type": "python", // 使用するDebugger
            "request": "launch", // debug実行のモード（launchかattach）
            "program": "${workspaceFolder}/myapp/manage.py", // debug対象のプログラムのパス
            "console": "integratedTerminal", // debugの結果を出力するコンソール
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true // djangoプロジェクトか否か
        }
    ]
}